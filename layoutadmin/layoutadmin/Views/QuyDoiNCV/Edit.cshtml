@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    form {
        width: 100%;
        margin: 0 auto;
        background-color: #fff;
        padding: 20px;
        border-radius: 5px;
        box-shadow: 0 0 5px #999;
    }

    label {
        display: block;
        margin-bottom: 10px;
        font-weight: bold;
    }

    input[type="text"],
    input[type="number"] {
        display: block;
        width: 100%;
        padding: 10px;
        border: 1px solid #ccc;
        border-radius: 3px;
        box-sizing: border-box;
    }

    button {
        background-color: #4CAF50;
        color: #fff;
        padding: 10px;
        border: none;
        border-radius: 3px;
        cursor: pointer;
        font-size: 16px;
        margin-top: 20px;
        width: 100%;
    }

        button:hover {
            background-color: #3e8e41;
        }
</style>
<div class="card">
    <div class="card-header">
        <h3 class="card-title">SỬA THÔNG TIN</h3>
    </div>
    <!-- /.card-header -->
    <div class="card-body">
        <form>
            <label for="loaiSanPham">Loại sản phẩm:</label>
            <input type="text" id="loaiSanPham" name="loaiSanPham"><br>

            <label for="moTaLoaiSanPham">Mô tả loại sản phẩm:</label>
            <input type="text" id="moTaLoaiSanPham" name="moTaLoaiSanPham"><br>

            <label for="yeuCauTieuChuan">Yêu cầu tiêu chuẩn:</label>
            <input type="text" id="yeuCauTieuChuan" name="yeuCauTieuChuan"><br>

            <label for="tietChuan">Tiết chuẩn:</label>
            <input type="text" id="tietChuan" name="tietChuan"><br>

            <label for="diem">Điểm:</label>
            <input type="text" id="diem" name="diem"><br>

            <button type="button" onclick="updateQuyDoiNCV()">Cập nhật</button>
        </form>
    </div>
    <!-- /.card-body -->
    <div id="pagination" class="pagination">
    </div>
</div>

<script>

    const urlParams = new URLSearchParams(window.location.search);
    const ID = urlParams.get('id');

    fetch("https://localhost:44364/api/QuyDoiNCV/Get-id?ID=" + ID)
        .then(response => response.json())
        .then(data => {
            document.getElementById("loaiSanPham").value = data.loaiSanPham;
            document.getElementById("moTaLoaiSanPham").value = data.moTaLoaiSanPham;
            document.getElementById("yeuCauTieuChuan").value = data.yeuCauTieuChuan;
            document.getElementById("tietChuan").value = data.tietChuan;
            document.getElementById("diem").value = data.diem;
        })

    function updateQuyDoiNCV() {

        const link = "https://localhost:44364/api/QuyDoiNCV/Update/";
        const loaiSanPham = document.getElementById("loaiSanPham").value;
        const moTaLoaiSanPham = document.getElementById("moTaLoaiSanPham").value;
        const yeuCauTieuChuan = document.getElementById("yeuCauTieuChuan").value;
        const tietChuan = document.getElementById("tietChuan").value;
        const diem = document.getElementById("diem").value;

        const data = {
            id: ID,
            loaiSanPham: loaiSanPham,
            moTaLoaiSanPham: moTaLoaiSanPham,
            yeuCauTieuChuan: yeuCauTieuChuan,
            tietChuan: tietChuan,
            diem: diem
        }

        var options = {
            method: 'PUT',
            headers: {
                'Content-Type': 'application/json'
            },
            body: JSON.stringify(data),
        };

        fetch(link + ID, options)
            .then(response => {
                if (response.ok) {
                    alert('Cập nhật dữ liệu thành công');
                    window.location.href = '/QuyDoiNCV/Index';
                } else {
                    alert('Có lỗi xảy ra');
                }
            });
    }
</script>